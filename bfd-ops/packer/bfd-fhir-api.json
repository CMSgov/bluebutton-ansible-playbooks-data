{
  "variables": {
    "source_ami": "",
    "subnet_id": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "iam_instance_profile": "bfd-packer",
      "ssh_username": "ec2-user",
      "instance_type": "m5.xlarge",
      "region": "us-east-1",
      "subnet_id": "{{user `subnet_id`}}",
      "associate_public_ip_address": "false",
      "source_ami": "{{user `source_ami`}}",
      "security_group_filter": {
        "filters": {
          "tag:Name": "bfd-mgmt-vpn-private"
        }
      },
      "ami_name": "Test-AMI-For-Data-Server-{{isotime | clean_ami_name}}",
      "ami_description": "Testing the packer/ansible AMI build. DO NOT USE.",
      "ssh_pty": true,
      "tags": {
        "Name": "bfd-jenkins-{{isotime \"20060102030405\"}}",
        "Application": "bfd-jenkins"
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "command": "./bfd-ops/ansible/ansible-playbook-wrapper",
      "playbook_file": "./bfd-ops/ansible/data-server.yml",
      "extra_arguments": [
        "-vvv",
        "--extra-vars",
        "ansible_python_interpreter=/usr/bin/python"
      ],
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='-o IdentitiesOnly=yes'"
      ]
    }
  ]
}
